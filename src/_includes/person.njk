---
layout: base.njk
---

<h1 id="main-content" tabindex="-1">{{ title }}</h1>

{{ content | safe }}

<h2>Posts by {{ title }}</h2>

<ol reversed>
{% for post in collections.post | authorIs(code_name) %}
        <li>{% if post.data.date %}<time datetime="{{ post.data.date | machineReadable }}">{{ post.data.date | humanReadable }}</time>: {% endif %}<a href="{{ post.url }}">{{ post.data.title }}</a></li>
{% endfor %}
</ol>